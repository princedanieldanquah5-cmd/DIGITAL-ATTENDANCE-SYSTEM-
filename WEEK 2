class AttendanceSession {
private:
    string courseCode;
    string date;
    string startTime;
    int duration;

public:
    void createSession() {
        cout << "Enter course code: ";
        cin >> courseCode;

        cout << "Enter date: ";
        cin >> date;

        cout << "Enter start time: ";
        cin >> startTime;

        cout << "Enter duration (minutes): ";
        cin >> duration;
    }

    void displaySession() {
        cout << "\nCourse: " << courseCode;
        cout << "\nDate: " << date;
        cout << "\nStart Time: " << startTime;
        cout << "\nDuration: " << duration << " minutes\n";
    }
};
